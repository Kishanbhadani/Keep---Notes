<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="7dp"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/CardNote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Note_Lay"
            android:orientation="vertical"
            android:padding="9dp">

            <TextView
                android:id="@+id/TxtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/playregular"
                android:text="Title"
                android:textColor="#529B32"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>


            <TextView
                android:id="@+id/TxtCnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/itimregular"
                android:text="Content"
                android:textColor="@color/Note_Cnt"
                android:textSize="18dp"></TextView>

        </LinearLayout>

        <ImageView
            android:id="@+id/DeleteItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/baseline_delete_item_24"></ImageView>

    </androidx.cardview.widget.CardView>

</LinearLayout>